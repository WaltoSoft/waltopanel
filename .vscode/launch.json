{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug waltopanel",
            "cargo": {
                "args": [
                    "build",
                    "--bin=waltopanel",
                    "--package=waltopanel"
                ],
                "filter": {
                    "name": "waltopanel",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Debug waltopanel (C++ Tools)",
            "program": "${workspaceFolder}/target/debug/waltopanel",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cargo build"
        }
    ]
}
